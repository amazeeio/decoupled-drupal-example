# Ignore directories generated by Composer
drush/contrib
vendor
web/core
web/modules/contrib
web/themes/contrib
web/profiles/contrib
web/libraries

# Ignore configuration files that may contain environment-sensitive information.
web/sites/*/local.settings.php
web/sites/*/local.services.yml

# Ignore Drupal's file directory
web/sites/*/files
web/sites/*/private

# Ignore test output
web/sites/simpletest

# We absolutely don't want to have the .sass-cache in git.
.sass-cache

# Ignore .map files
*.css.map
css/map

# Ignore css files from custom themes
/web/themes/*/css/*.*
/.drush-lock-update
/.editorconfig
/.gitattributes